{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "incremental": false,
    "noEmit": false,
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "outDir": "./dist",
    "rootDir": "./src"
  },
  "exclude": [
    "src/app/**",
    "**/*.test.ts",
    "**/*.stories.ts",
    "node_modules",
    ".next",
    "dist",
    "out"
  ]
}
